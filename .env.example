# WalletConnect Project ID - Get one at https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# AccessRegistry Contract Address (set after deployment)
NEXT_PUBLIC_ACCESS_REGISTRY_ADDRESS=

# Lighthouse Storage Configuration - Get API key at https://files.lighthouse.storage/
NEXT_PUBLIC_LIGHTHOUSE_API_KEY=your_lighthouse_api_key_here

# Pinata IPFS Configuration (legacy) - Get keys at https://app.pinata.cloud/developers/api-keys
NEXT_PUBLIC_PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs
# For client-side uploads (browser), use NEXT_PUBLIC_PINATA_JWT
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_here
# For server-side only operations, use PINATA_JWT
PINATA_JWT=your_pinata_jwt_here

# Contract Deployment
# Get testnet POL from https://faucet.polygon.technology/
DEPLOYER_PRIVATE_KEY=your_private_key_here
POLYGON_AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your_alchemy_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
FACILITATOR_ADDRESS=your_facilitator_address_or_leave_empty_for_deployer

# Alchemy API Key
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here
